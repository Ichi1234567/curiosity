<h1>Listing categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Avatar</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td>
      <% if category.avatar %>
        <%= img_tag category.avatar.to_s %>
      <% end %>
    </td>
    <td><%= category.description %></td>
    <td><%= link_to 'Show', category %></td>
    <td><%= link_to 'Edit', edit_category_path(category) %></td>
    <td><%= link_to 'Destroy', category, "method" => :delete,
                                         "data" => { confirm: 'Are you sure?' },
                                         "remote" => true,
                                         "data-type" => :json,
                                         "class" => "delete" %></td>
  </tr>
<% end %>
</table>

<br />

