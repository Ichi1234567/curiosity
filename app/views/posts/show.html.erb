
<div class="container">
  <p id="notice"><%= notice %></p>
  
  <p>
    <b>Title:</b>
    <%= @post.title %>
  </p>
  
  
  <p>
    <b>Category:</b>
    <% if @post.category_id %>
      <%= find_category(@post.category_id) %>
    <% end %>
  </p>
  <% if @post.avatar_url %>
    <p>
      <%= image_tag @post.avatar.to_s, :class => "img-polaroid" %>
    </p>
  <% end %>
  <p>
    <b>Content:</b>
    <%= @post.content %>
  </p>
  
  
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>
