<%= simple_form_for(@post, :html => {:multipart => true, :class => "form-horizontal"},
                           :defaults => {
                              :wrapper_html => {:class => "control-group"},
                              :label_html => {:class => "control-lable"}
                           }) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <div><%= flash[:error] %></div>
  <% end %>

  <%= f.input :title, :label => "Title"%>
  <%= f.input :category_id, :collection => category_options %>
  <% if @post.avatar_url %>
    <%= image_tag @post.avatar_url(:thumb).to_s %>
  <% end %>
  <%= f.input :avatar, :label => "image", :as => :file %>
  <div class="field">
    <%= f.input :content, :label => "Content" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
